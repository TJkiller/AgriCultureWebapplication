@model IEnumerable<AgriCultureWeb.Models.Farmer>

@{
    ViewData["Title"] = "Filtered results";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            color: #212529;
            font-family: 'Segoe UI', Arial, sans-serif;
            padding: 20px;
        }

        h1 {
            margin-top: 20px;
        }

        .table {
            width: 100%;
            margin-top: 20px;
            background-color: white;
        }

            .table th, .table td {
                padding: 12px 15px;
                border: 1px solid #ddd;
            }

            .table th {
                background-color: #f8f8f8;
            }

        .btn-default {
            color: #fff;
            background-color: #6a1b9a; /* Purple color consistent with other buttons */
            border-color: #5a1b9a;
            padding: 5px 10px;
            text-decoration: none;
            border-radius: 0.25rem;
            margin-top: 20px; /* Ensure margin for visual space */
        }

            .btn-default:hover {
                background-color: #7b1fa2; /* Darker shade for hover effect */
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1>@ViewData["Title"]</h1>

        <table class="table table-hover table-striped">
            <thead class="thead-light">
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Type</th>
                    <th>Date</th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.FarmerId)</td>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Category)</td>
                            <td>@Html.DisplayFor(modelItem => item.Date)</td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4">No results found.</td>
                    </tr>
                }
            </tbody>
        </table>

        <a asp-action="Index" asp-controller="Farmers" class="btn btn-default">Back to List</a>
    </div>
</body>
</html>
